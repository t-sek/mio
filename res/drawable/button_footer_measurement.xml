<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="4dp" />

            <solid android:color="@color/theme_white_dark" />

            <stroke android:width="2dp" android:color="@color/theme_white_dark" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_enabled="false"><shape android:shape="rectangle">
            <corners android:radius="4dp" />

            <solid android:color="@color/theme_white" />

            <stroke android:width="2dp" android:color="@color/theme_white" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="4dp" />

            <solid android:color="@color/theme_white" />

            <stroke android:width="15dp" android:color="@color/theme_white" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>