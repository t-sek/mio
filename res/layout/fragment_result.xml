<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context="com.example.miounit.ResultActivity$PlaceholderFragment" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.8"
        android:background="@drawable/frame" >

        <TextView
            android:id="@+id/view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#aa339933"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Detail"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_label"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/view_label"
            android:background="#aa339933" />

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/view_label"
            android:layout_below="@+id/view_label"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            layout="@layout/view_result_detail" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.8"
        android:background="@drawable/frame" >

        <TextView
            android:id="@+id/view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#aa339933"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Trainings"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_label"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/view_label"
            android:background="#aa339933" />

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_label"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp
            "
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            layout="@layout/view_result_trainings" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="2"
        android:background="@drawable/frame" >

        <TextView
            android:id="@+id/view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#aa339933"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="HeartRate"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_label"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/view_label"
            android:background="#aa339933" />

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view_label"
            android:layout_below="@+id/view_label"
            layout="@layout/view_result_graph" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@drawable/frame" >

        <TextView
            android:id="@+id/view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#aa339933"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Datas"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_label"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/view_label"
            android:background="#aa339933" />

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/view_label"
            android:layout_below="@+id/view_label"
            layout="@layout/view_result_datas" />
    </RelativeLayout>

</LinearLayout>