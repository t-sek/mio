<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme" >

    <ImageView
        android:id="@+id/btn_measurement_setting"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/heart" />

    <!--
         <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_measurement_setting"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Tropica"
        android:textColor="#80000000"
        android:textSize="48dp" />
    -->

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="50dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_sign_up"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:background="@color/theme_white_white"
        android:padding="20dp"
        android:text="ログイン"
        android:textSize="20dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@color/theme_white_white"
        android:padding="20dp"
        android:text="新規登録"
        android:textSize="20dp"
        android:visibility="invisible" />

</RelativeLayout>