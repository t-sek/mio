	    android:id="@+id/editText6"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/textView9"
	    android:layout_alignLeft="@+id/editText1"
	    android:ems="15"
	    android:inputType="textPassword" />

